{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get"
      ],
      "route": "quest/active"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "inputActiveQuest",
      "databaseName": "cyberskies",
      "collectionName": "quest",
      "connectionStringSetting": "CosmoDB",
      "sqlQuery": "SELECT c.name, c.comingSoonDate, c.startDate, c.endDate, c.labels, c.goal, c.active FROM c WHERE c.active=true OFFSET 0 LIMIT 1"
    }
  ]
}